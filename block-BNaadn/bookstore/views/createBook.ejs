<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <header>
      <div class="container flex">
        <a class="logo" href="">Bookstore</a>
        <ul>
          <li>
            <a href="/books/new"><button>Add Book</button></a>
          </li>
        </ul>
      </div>
    </header>
    <main>
      <h1>Create Book</h1>
      <section class="container space4">
        <form class="new-form flex f-center" action="/books" method="POST">
          <fieldset>
            <input class="form-box" type="file" name="cover_image" />

            <input
              class="form-box"
              type="text"
              name="title"
              placeholder="title"
            />

            <form action="/authors/new" method="POST" class="flex author">
              <select class="form-box" name="author" id="">
                <% authors.forEach((author) => { %>
                <option value="<%= author.name %>"><%= author.name %></option>
                <% }) %>
              </select>

              <a href="">
                <button>Create Author</button>
              </a>
            </form>

            <input
              class="form-box"
              type="text"
              name="summary"
              placeholder="summary"
            />

            <input
              class="form-box"
              type="number"
              name="pages"
              placeholder="pages"
              value="0"
            />

            <input
              class="form-box"
              type="text"
              name="publication"
              placeholder="publication"
            />
            <!-- <input type="text" name="categories" placeholder="categories" /> -->
            <a href=""><button>Submit</button></a>
          </fieldset>
        </form>
      </section>
    </main>
  </body>
</html>
